<%-include('./partials/NavBar',{loggedInUserId:data.loggedInUserId})%>
<div class="container-fluid">
<script src="/public/js/ProfileScript.js"></script>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <div class="mt-3">
      <p class="text text-danger text-center">
        <img
          src="http://localhost:5000/<%= data.user.profilePic %>"
          alt="author pic"
          width="200"
          height="200"
          class="rounded-circle profile-pic"
        />
        <div>
            <h2 class="text text-danger text-center">
                <%=data.user.name%>
            </h2>
        </div>
      </p>
    </div>
  </div>
  <div class="col-1"></div>
</div>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
      <% if (data.userBlogs.length > 0) { %> 
          <h5 class="text text-warning mt-4 text-center">Blogs Written</h5>
      <%}%>
       <% for(let i=0; i<data.userBlogs.length; i++) { %>
           <div class="card p-3 my-3">
       <h5 class="text text-info"><%=data.userBlogs[i].title%></h5>
         <p class="text text-danger text-important" id="date">Published On: <%=new Date(data.userBlogs[i].createdAt).toDateString()%></p>
          <div class="col-sm-3">
             <button class="btn btn-warning px-2" id="readBtn" data-blogId=<%=data.userBlogs[i]._id%> >Read Blog</button>
              </div>
           </div>
       <% } %> 
  </div>
  <div class="col-1"></div>
</div>
</div>
<!-- data.userBlogs[i]._id -->