<div class="d-flex align-items-center justify-content-center">
  <div class="card p-5 shadow-sm" style="width: 30rem">
    <h2 class="text-center text-info font-weight-bold">Get Started</h2>

    <form id="signUpForm" novalidate method="POST" enctype="multipart/form-data" class="form-container">
        <div class="mb-3 mx-3  text-center ">
            <img id="previewImg" src="" class="rounded-circle "></img>
       </div>
       <input type="file" name="profilePic" id="file"></input>
      <div class="form-group mb-3 mt-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          aria-describedby="emailHelp"
          required
          data-pristine-required-message="Please Fill Name"
          class="form-control"
          data-pristine-minlength="3"
          required
        />
      </div>
      <div class="form-group mb-3 mt-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          aria-describedby="emailHelp"
          required
          data-pristine-required-message="Please Fill Email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
          class="form-control"
          data-pristine-required-message="Please Fill Password"
          data-pristine-minlength="8"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          required
          class="form-control"
          data-pristine-required-message="Please Confirm Password"
        />
      </div>

      <div class="mt-3">
        <button type="submit" class="btn btn-warning" id="signup-btn">
          Sign Up
        </button>
      </div>
      <div class="mt-3">
        <a href="login" class="text text-info hovertext-success">
          Already have a account</a
        >
      </div>
    </form>
  </div>
</div>
<script src="/public/js/pristine.js"></script>
<script src="/public/js/SignUpScript.js"></script>
